<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0067cbc5">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:id="@+id/rl_buy_previus"
            android:background="#004e9c96"
            android:visibility="visible"
            android:layout_weight="0.5">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/skip"
                android:id="@+id/btn_ind_pre"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|left"
                android:background="#006b6b6b"
                android:textColor="@color/tc_white"
                android:paddingLeft="@dimen/padding"
                android:textSize="@dimen/action_text_size"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_weight="0.5"
            android:id="@+id/rl_buy_next"
            android:background="#00010101"
            android:visibility="visible">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/next"
                android:id="@+id/btn_ind_next"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|right"
                android:background="#006b6b6b"
                android:textColor="@color/tc_white"
                android:paddingRight="@dimen/padding"
                android:textSize="@dimen/action_text_size" />
        </RelativeLayout>

    </LinearLayout>

    <com.cepheuen.progresspageindicator.ProgressPageIndicator
        android:id="@+id/dotsL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:dotGap="2dp"
        app:fillColor="#cccccc"
        app:radius="8dp"
        android:layout_centerInParent="true" />
</RelativeLayout>