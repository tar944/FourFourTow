<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/action_bar">

    <ImageView
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:id="@+id/iv_acn_menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/menu71"
        android:layout_margin="@dimen/action_bar_margin" />

    <ImageView
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:id="@+id/imageView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/left"
        android:layout_margin="@dimen/action_bar_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_acn_title"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/tc_white" />

    <ImageView
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:id="@+id/iv_acn_coin"
        android:layout_alignTop="@+id/iv_acn_menu"
        android:layout_toLeftOf="@+id/iv_acn_menu"
        android:layout_toStartOf="@+id/iv_acn_menu" />
</RelativeLayout>